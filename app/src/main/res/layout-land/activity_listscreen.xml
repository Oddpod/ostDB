<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    tools:context="com.example.odd.ostrino.ListScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edtFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Filter"
                    android:inputType="textPersonName"
                    android:textColor="#f100"
                    android:textCursorDrawable="@drawable/black" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnPlayAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play all" />

                <Button
                    android:id="@+id/btnPlaySelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="0dp"
                    android:text="Play Selected" />

            </TableRow>

        </TableLayout>

        <FrameLayout
            android:id="@+id/flLandscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="insideOverlay">

        <TableLayout
            android:id="@+id/tlOstTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0, 1, 2"
            android:stretchColumns="0, 1, 2">

            <TableRow
                android:id="@+id/ostHeaderRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleHeader"
                    android:padding="5dp"
                    android:text="Title"
                    android:textColor="#f100"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/showHeader"
                    android:padding="5dp"
                    android:text="Title"
                    android:textColor="#f100"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/tagsHeader"
                    android:padding="5dp"
                    android:text="Title"
                    android:textColor="#f100"
                    android:textSize="18sp"></TextView>

                <Button
                    android:id="@+id/btnDelHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="Delete" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>